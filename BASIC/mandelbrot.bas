1 REM Draws a full colour Mandelbrot set, in 26 lines,
2 REM to the High Resolution Screen (VGA).
3 REM It takes 4 minutes and 21 seconds.
5 CLS
10 IT=20
15 PRINT CHR$(27);"[7m";
20 FOR Y=1 TO -1 STEP -0.08
30 FOR X=-2 TO 0.5 STEP 0.0315
40 GOSUB 100:GOSUB 200
50 NEXT X:IF PEEK(198) THEN PRINT
60 NEXT Y
70 PRINT CHR$(27);"[27m";:END
100 CX=X:CY=Y:ZX=X:ZY=Y
110 FOR I=1 TO IT
120 TX=ZX*ZX-ZY*ZY:TY=ZX*ZY*2:ZX=TX+CX:ZY=TY+CY
130 IF ZX*ZX+ZY*ZY > 4 THEN 150
140 NEXT I
150 IF I>IT THEN I=IT
160 RETURN
200 INK=I-16*INT(I/16)
210 IF INK>9 THEN INK$=STR$(INK+20)
220 IF INK<10 THEN INK$=STR$(INK+30)
230 PRINT CHR$(27);"[";RIGHT$(INK$,LEN(INK$)-1);"m";
240 PRINT " ";
250 RETURN
